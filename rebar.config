%% -*- tab-width: 4;erlang-indent-level: 4;indent-tabs-mode: nil -*-
%% ex: ft=erlang ts=4 sw=4 et

{require_otp_vsn, "R1[45]"}.

%% == Erlang Compiler ==
{erl_opts, [%{d,'DEBUG',true},
            debug_info,
            fail_on_warning,
            strict_validation,
            warn_unused_vars,
            warn_export_all,
            warn_shadow_vars,
            warn_unused_import,
            warn_unused_function,
            warn_bif_clash,
            warn_unused_record,
            warn_deprecated_function,
            warn_obsolete_guard,
            warn_export_vars,
            warn_exported_vars,
            warn_missing_spec,
            warn_untyped_record ]}.

%% == Port Compiler ==

%% == xref ==

{xref_warnings, true}.
{xref_checks, [exports_not_used, undefined_function_calls]}.

%% == EUnit ==

{cover_enabled, true}.
{cover_export_enabled, true}.

{eunit_opts, [  verbose , {report, {eunit_surefire, [{dir, "."} ]}}]}.

%% == Cover ==

%% == QuickCheck ==

%% == Cleanup ==

{clean_files, ["*.eunit", "ebin/*.beam", "*~", "*/*~"]}.

%% == Dependencies ==

{deps, [{edown, ".*", {git, "git://github.com/esl/edown.git", {branch, "master"}}} ]}.

%% == Pre/Post Command Hooks ==

{pre_hooks, []}.
{post_hooks, []}.

%% == EDoc ==
{edoc_opts, [{doclet, edown_doclet},
             {top_level_readme,
              {"./README.md", "http://github.com/gburd/gen_paxos"}}]}.
